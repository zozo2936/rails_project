<h1 class = "d-flex justify-content-center">商品首頁</h1>
<%= form_for([:admin,@product])do |form| %>
  <tr>
    <ul>名稱：<%= form.text_field :name %></ul>
    <ul>原價：<%= form.text_field :list_price %></ul>
    <ul>售價：<%= form.text_field :sell_price %></ul>
    <ul>內容：<%= form.text_area :description %></ul>
    <ul><%= form.submit %></ul>
  </tr>
  <% end %>